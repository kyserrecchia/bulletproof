	</head>

	<body>

		<div id="mySidenav" class="sidenav">
			<div class="sidenav1">
				<a href="/home">Home</a>
				<a href="/shop">Shop</a>
				<a href="/learn">Learn More</a>
				<a href="#">Contact</a>
			</div>  
		</div>

		<div id="main" class="container">
			<div class="topnav">
				<a id="contain" onclick="myFunction()">
					<div class="bar1"></div>
					<div class="bar2"></div>
					<div class="bar3"></div>
				</a>
				<a class="header">BULLETPROOF BONGS</a>
			</div>
		</div>
		<hr id="hrMain">
		<div class="bongContainer">
			<div><strong>OUR BONGS</strong></div>
			<hr id="hrBong">
		<!-- EACH ITEM LOOKS LIKE THIS -->
